<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".YogaAdminApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_application_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_application_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UniversalYogaAdminApp"
        tools:targetApi="31">
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.CourseDetailActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.ClassDetailActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.YogaClassListActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.CourseItemListActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.GetStartedActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.MainActivity"
            android:exported="false" />
    </application>

</manifest>