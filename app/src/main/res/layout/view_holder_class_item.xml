<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/margin_large"
    app:cardBackgroundColor="#EDE7F6"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivClassImg"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/yoga_img_background"
            android:scaleType="fitXY" />
        <!--default_yoga_img-->
        <RelativeLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvClassName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Flow Yoga"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/tvClassDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvClassName"
                android:layout_gravity="start"
                android:drawablePadding="@dimen/margin_medium"
                android:padding="4dp"
                android:text="Saturday"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/ic_calendar_with_blue"

                tools:ignore="RtlCompat" />

         <!--   <TextView
                android:id="@+id/tvItemTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvItemDayOfWeek"
                android:layout_gravity="start"
                android:drawablePadding="@dimen/margin_medium"
                android:padding="4dp"
                android:text="10:15"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/ic_time_with_blue"
                tools:ignore="RtlCompat" />-->

            <TextView
                android:id="@+id/tvInstructorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvClassDate"
                android:layout_gravity="start"
                android:drawablePadding="@dimen/margin_medium"
                android:padding="4dp"
                android:text="Ms. Anne"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/ic_person_with_blue"
                tools:ignore="RtlCompat" />
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>